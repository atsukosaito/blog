!!!
%html{lang: :ja}
  %head
    = partial 'layouts/head'
  %body
    = partial 'layouts/navigation'

    #main{role: "main"}
      .logo_area
        .container
          %h1
            - if content_for?(:header)
              = yield_content :header
            - else
              = link_to '/' do
                blog.takuyan.com
      .container
        .row
          .col-md-8.col-md-offset-2
            = yield

    = partial 'layouts/footer'

    - if content_for?(:js)
      = yield_content :js
