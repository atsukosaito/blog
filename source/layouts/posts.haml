!!!
%html{lang: :ja}
  %head
    = partial 'layouts/head'
  %body
    = partial 'layouts/header'
    #main{role: "main"}
      .container
        %ul.breadcrumb
          %li
            = link_to 'TOP', '/'
          %li
            = link_to current_page.title, current_page
        .row
          .col-md-8
            %article
              .page_title
                %h1
                  = current_page.title
                .help-block
                  - current_page.tags.each do |t|
                    = link_to t, tag_path(t), class: 'label label-default'
                   
                  %span.label.label-default
                    = current_page.date.strftime('%Y-%m-%d')
              .article_body
                = yield
          .col-md-4.side
            %h3
              Recent Article
            %ul.recent_articles.list-unstyled
              - blog.articles[0..30].each do |a|
                %li
                  %h4
                    = link_to a.title, a

            %h3
              Tags
            %ul.side_tags.list-inline
              - blog.tags.each do |t, articles|
                %li
                  %h4
                    = link_to t, tag_path(t)

    = partial 'layouts/footer'

