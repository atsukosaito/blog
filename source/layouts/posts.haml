!!!
%html{lang: :ja}
  %head
    = partial 'layouts/head'
  %body
    = partial 'layouts/header'
    #main{role: "main"}
      .container
        %ul.breadcrumb
          %li
            = link_to 'TOP', '/'
          %li
            = link_to current_page.title, current_page
        .row
          .col-md-8
            %article
              .page_title
                %h1
                  = current_page.title
                .help-block
                  - current_page.tags.each do |t|
                    = link_to t, tag_path(t), class: 'label label-default'
                   
                  %span.label.label-default
                    = current_page.date.strftime('%Y-%m-%d')
              .article_body
                = yield

            .disqus
              #disqus_thread
              :javascript
                /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                var disqus_shortname = 'com-takuyan-blog'; // required: replace example with your forum shortname

                /* * * DON'T EDIT BELOW THIS LINE * * */
                (function() {
                  var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                  dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                  (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
              <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
    
          .col-md-4.side
            %h3
              Recent Article
            %ul.recent_articles.list-unstyled
              - blog.articles[0..30].each do |a|
                %li
                  %h4
                    = link_to a.title, a

            %h3
              Tags
            %ul.side_tags.list-inline
              - blog.tags.each do |t, articles|
                %li
                  %h4
                    = link_to t, tag_path(t)

    = partial 'layouts/footer'

